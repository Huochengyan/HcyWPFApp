<Page x:Class="HcyWpfApp.demo_pages.Page_Dock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HcyWpfApp.demo_pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Dock">

    <Grid>
        <!-- DockPanel可以把元素固定到某个位置-->
        <DockPanel LastChildFill="False">
            <Button Width="100" Height="40"   DockPanel.Dock="Left">1</Button>
            <Button Width="100" Height="40"   DockPanel.Dock="Top">2</Button>
            <Button Width="100" Height="40"   DockPanel.Dock="Right">3</Button>
            <Button Width="100" Height="40"   DockPanel.Dock="Bottom">4</Button>
        </DockPanel>
    </Grid>
</Page>
